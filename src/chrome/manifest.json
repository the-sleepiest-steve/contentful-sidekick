{
    "manifest_version": 2,
    "name": "MSQC Contentful Sidekick",
    "short_name": "MSQC Contentful Sidekick",
    "description": "Chrome Extension that enables inline editing for MSQC websites created in Contentful",
    "version": "0.0.1",
    "permissions": [
      "activeTab",
      "cookies",
      "identity",
      "storage",
      "tabs",
      "*://*.msqc.com/*",
      "*://*.missouriquiltco.com/*"
    ],
    "browser_action": {
      "default_icon": "img/icon-128.png",
      "default_popup": "html/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.msqc.com/*", "*://*.missouriquiltco.com/*"],
        "js": ["js/vendor.js", "js/content.js"],
        "css": ["css/content.css"]
      }
    ],
    "web_accessible_resources": [
      "js/content.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
